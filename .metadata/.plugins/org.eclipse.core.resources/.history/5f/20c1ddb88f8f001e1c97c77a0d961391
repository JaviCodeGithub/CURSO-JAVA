package exceptions1;
import java.util.*;

import javax.swing.*;

public class AreaPesos {

	static boolean next=false;
	
	static char figure;
	
	public static void main(String[] args) {
		
		do {
			
		try {
			calculate();
			
			
			
		}catch(NumberFormatException e) {
			
			JOptionPane.showMessageDialog(null, "Introduce a fucking number bro");
			
		}catch(StringIndexOutOfBoundsException e) {
			
			JOptionPane.showMessageDialog(null, "WTF?");			
			
		}catch(NullPointerException e) {
			
			System.exit(0);
		}
		
		
	}while(next==false);
	}
		
		static void calculate() {
			
		Scanner entry = new Scanner(System.in);
			
		System.out.println("Choose a character according to the object's area you want to calculate: \ns: Square \nr: Rectangle \nt: Triangle \nc: Circle");
		
		figure = entry.nextLine().charAt(0);
		
		entry.close();
			
		switch(figure) {
		
		case 's':
			
			int Sside = Integer.parseInt(JOptionPane.showInputDialog("Introduce de measure of the side of the square"));
			
			JOptionPane.showMessageDialog(null, "The area of your square is: \n" + Sside*Sside);
			
			next=true;
			
			break;
			
		case 't':
			
			int Tside = Integer.parseInt(JOptionPane.showInputDialog("Introduce the measure of the side of your triangle"));
			
			JOptionPane.showMessageDialog(null, "The area of your triangle is: \n" + (Tside*Tside/2));
			
			next=true;
			
			break;
			
		case 'r':
			
			int Rbase = Integer.parseInt(JOptionPane.showInputDialog("Introduce the measure of the base of your rectangle"));
			
			int Rheight = Integer.parseInt(JOptionPane.showInputDialog(" Introduce the measure of the heigth of your rectangle"));
			
			JOptionPane.showMessageDialog(null, "The area of your rectangle is: \n" + Rbase*Rheight);
			
			next=true;
			
			break;
			
		case 'c':
			
			int Cradio = Integer.parseInt(JOptionPane.showInputDialog("Introduce the measure of the radio of your circle"));
			
			JOptionPane.showMessageDialog(null, "The area of your circle is: \n" + (Cradio*Cradio)*Math.PI);
			
			next=true;
			
			break;
			
		default:
			
			JOptionPane.showMessageDialog(null, "The case selected is not in the previous options");
		}
		
//-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
		
		enum Gender{
			
			M("Male"), F("Female");
			
			String gender;
			
			private Gender(String gender) {
				
				this.gender=gender;
				
			}
			
			public String returnGender() {
				
				return gender;
			}
		}
		
		String yourGender = JOptionPane.showInputDialog("Introduce M if you are a Man or F if you are a Woman").toUpperCase();
		
		Gender theGender = Enum.valueOf(Gender.class, yourGender);
		
		int yourHeigth = Integer.parseInt(JOptionPane.showInputDialog("Introduce now your heigth, for example if you are 1.80, type 180"));
		
		switch(theGender) {
		
		case M:
			
			JOptionPane.showMessageDialog(null, "Because you are a " + theGender.returnGender() + ", and your heigth is: " + yourHeigth + " you should weigth " + (yourHeigth - 110));
			
			break;
			
		case F:
			
			JOptionPane.showMessageDialog(null, "Because you are a " + theGender.returnGender() + ", and your heigth is: " + yourHeigth + " you should weigth " + (yourHeigth -120));
			
			break;
			
		default:
			
			JOptionPane.showMessageDialog(null, "This option doesn't exist");
		
		}
			
	}
		}


