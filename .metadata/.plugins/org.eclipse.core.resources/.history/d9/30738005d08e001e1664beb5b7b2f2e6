package exceptions1;
import java.util.*;

import javax.swing.*;

public class AreaPesos {

	static boolean next=false;
	
	static char figure;
	
	public static void main(String[] args) {
		
		do {
			
		try {
			calculate();
		}catch(NumberFormatException e) {
			
			JOptionPane.showMessageDialog(null, "Introduce a fucking number bro");
			
		}catch(StringIndexOutOfBoundsException e) {
			
			JOptionPane.showMessageDialog(null, "Bye");
		}
	}while(next==false);
	}
		
		static void calculate() {		
			
		figure =JOptionPane.showInputDialog("Choose a character according to the object's area you want to calculate: \ns: Square \nr: Rectangle \nt: Triangle \nc: Circle").toLowerCase().charAt(0);
			
		switch(figure) {
		
		case 's':
			
			int Sside = Integer.parseInt(JOptionPane.showInputDialog("Introduce de measure of the side of the square"));
			
			JOptionPane.showMessageDialog(null, "The area of your square is: \n" + Sside*Sside);
			
			next=true;
			
			break;
			
		case 't':
			
			int Tside = Integer.parseInt(JOptionPane.showInputDialog("Introduce the measure of the side of your triangle"));
			
			JOptionPane.showMessageDialog(null, "The area of your triangle is: " + (Tside*Tside/2));
			
			next=true;
			
			break;
			
		case 'r':
			
			int Rbase = Integer.parseInt(JOptionPane.showInputDialog("Introduce the measure of the base of your rectangle"));
			
			int Rheight = Integer.parseInt(JOptionPane.showInputDialog(" Introduce the measure of the heigth of your rectangle"));
			
			JOptionPane.showMessageDialog(null, "The area of your rectangle is: " + Rbase*Rheight);
			
			next=true;
			
			break;
			
		case 'c':
			
			int Cradio = Integer.parseInt(JOptionPane.showInputDialog("Introduce the measure of the radio of your circle"));
			
			JOptionPane.showMessageDialog(null, "The area of your circle is: " + (Cradio*Cradio)*Math.PI);
			
			next=true;
			
			break;
			
		default:
			
			JOptionPane.showMessageDialog(null, "The case selected is not in the previous options");
		}
			
	}
		}


