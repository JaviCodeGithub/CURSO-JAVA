package leyendo;

import java.io.*;

public class AccesoFichero {
	
	public static void main(String[] args) {
		
		LeerFichero accediendo = new LeerFichero();
		
		accediendo.lee();
		
	}

}

class LeerFichero{
	
	public void lee(){
		
		try {
		
		FileReader entrada = new FileReader("C:/Users/javie/Desktop/ejemplo.txt");
		
		int c = entrada.read();
		
		System.out.print((char)c);
		
		while(c!=-1) {
			
			c = entrada.read();
			
			char letra = (char)c;
			
			System.out.print(letra);
			
			entrada.close();
			
		}
		
		}catch(FileNotFoundException e) {
			
			System.out.println("El archivo no se ha podido encontrar");
		}catch(IOException e) {
			
			System.out.println("El archivo no se ha podido leer");
		}
		
		
	}
}