	public static void main(String[] args) {
		
		String frase="Hoy es un d√≠a estupendo para aprender a programar en Java";
		
//		String frase_resumen=frase.substring(10);//se salta los 10 primeros caracteres
		
//		System.out.println(frase_resumen);
		
		String frase_resumen=frase.substring(0, 23) + " para cargarse al puto gnomo de mierda orejudo,";
		
		String frase_resumen2=frase.substring(24, 57) + " y empezar a ganar un pastizal";
		
		System.out.println(frase_resumen);
		
		System.out.println(frase_resumen2);
		
		System.out.println(frase_resumen + " " + frase_resumen2);
				
	}

}
